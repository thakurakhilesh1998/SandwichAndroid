<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.udacity.sandwichclub.DetailActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/mainPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/mainPadding"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:id="@+id/tvMainName"/>
                <LinearLayout
                    style="@style/subLayout">
                    <TextView
                        style="@style/labelText"
                        android:layout_width="wrap_content"
                        android:text="@string/also_known_as"
                        android:textStyle="bold"
                        />  
                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/labelText"
                        android:id="@+id/also_known_asTV"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/subLayout">
                    <TextView
                        style="@style/labelText"
                        android:layout_width="wrap_content"
                        android:text="@string/placeOfOrigin"
                        android:textStyle="bold"
                        />
                    <TextView
                        style="@style/labelText"
                        android:layout_width="wrap_content"
                        android:id="@+id/tvPlaceOfOrgin"
                        />
                </LinearLayout>
                <TextView
                    android:text="@string/detail_description_label"
                    style="@style/labelText"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/mainPadding"
                    />
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_marginTop="@dimen/mainPadding"
                    style="@style/labelText"/>
                 <TextView
                     style="@style/labelText"
                     android:textStyle="bold"
                     android:text="@string/detail_ingredients_label"
                     android:layout_marginTop="@dimen/mainPadding"
                     />
                <TextView
                    android:id="@+id/tvIngredients"
                    style="@style/labelText"
                    android:layout_marginTop="@dimen/mainPadding"
                    />
            </LinearLayout>
    </LinearLayout>
</ScrollView>